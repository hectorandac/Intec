<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:visibility="gone" >

            <include
                layout="@layout/expandable_list_title_02_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/container_fields">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/exp_type"
                android:textSize="10sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/exp_sec"
                android:textSize="10sp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/exp_room"
                android:textSize="10sp" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/exp_teacher"
                android:textSize="10sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/exp_mon"
                android:textSize="10sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/exp_tue"
                android:textSize="10sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/exp_wed"
                android:textSize="10sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/exp_thu"
                android:textSize="10sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/exp_fri"
                android:textSize="10sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/exp_sat"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>